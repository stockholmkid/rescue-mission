<h1> Create a New Question </h1> <br>


  <%= form_for @question do |f| %>

  <% if @question.errors.any? %>
      <ul>
        <% @question.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>


  Title: <%= f.text_field :title %> <br>
  Description: <br>
  <%= f.text_area :description, size: "60x12" %> <br>
  <%= f.submit "Create" %>
  <% end %>
